<h2>Domain Redirects</h2>
<div>
  <%= form_tag redirects_path do %>
      <input name="domain" placeholder="from domain" />
      <input name="to" placeholder="target url" />
      <button>Add Redirect</button>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Domain</th>
        <th>Target</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @redirects.each do |redirect| %>
        <%= render 'redirect', :redirect => redirect %>
      <% end %>
    </tbody>
  </table>
</div>

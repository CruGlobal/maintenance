<h2>Users</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Has Access?</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <%= render 'user', :user => user %>
      <% end %>
    </tbody>
  </table>
</div>

<% content_for :onready do %>
  $("input.has_access").change(function() {
    $(this).closest("form").submit();
  });
<% end %>
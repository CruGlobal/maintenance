<ul id="apps">
  <% @apps.each do |app| %>
    <li id="<%= app.name %>" class="app clearfix"><%= render 'app', :app => app %></li>
  <% end %>
</ul>

<div class="add-app">
  <%= form_tag apps_path do %>
    <input name="name" placeholder="App name" />
    <button>Add App</button>
  <% end %>
</div>

<% content_for :onready do %>
  $("select.dependencies").chosen({no_results_text: "No dependencies matched"});

  $("select, input.maintenance").change(function() {
    $(this).closest("form").submit();
  });
<% end %>
